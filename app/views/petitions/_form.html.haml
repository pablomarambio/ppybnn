= form_for @petition, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :event_id, :class => 'control-label'
    .controls
      = f.text_field :event_id, :class => 'text_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.text_field :user_id, :class => 'text_field'
  .control-group
    = f.label :status, :class => 'control-label'
    .controls
      = f.text_field :status, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), petitions_path, :class => 'btn'
