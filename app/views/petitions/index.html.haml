- model_class = Petition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th Event
      %th User
      %th Status
      %th Created At
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @petitions.each do |petition|
      %tr
        %td= link_to petition.event.name, event_path(petition.event)
        %td= link_to petition.user.email, user_path(petition.user)
        %td= petition.status
        %td=l petition.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_petition_path(petition), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), petition_path(petition), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_petition_path, :class => 'btn btn-primary'
