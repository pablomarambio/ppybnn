- model_class = Petition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:event_id) + ':'
  %br
  = @petition.event_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @petition.user_id
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @petition.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), petitions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_petition_path(@petition), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), petition_path(@petition), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
